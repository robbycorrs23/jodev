    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "select",
          "id": "column",
          "options": [
            {
              "value": "left",
              "label": "Left Column"
            },
            {
              "value": "right",
              "label": "Right Column"
            }
          ],
          "label": "Column Position",
          "default": "left"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "select",
          "id": "column",
          "options": [
            {
              "value": "left",
              "label": "Left Column"
            },
            {
              "value": "right",
              "label": "Right Column"
            }
